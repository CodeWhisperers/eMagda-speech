{% extends "layout.twig" %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div id="speech_demo_error_container" style="display: none;">
                <span class="material-icons">error</span>
                <span>We are unable to process your request at this time. Please try again later.</span>
            </div>
            <div id="speech_demo_results_container">
                <div class="well" id="speech_demo_results"></div>
            </div>

            <p class="text-center">
                <button class="btn btn-primary btn-lg" id="speech_demo_record_button">Start</button>
                <strong id="speech_demo_record_timer" style="display: none;">00:00</strong>
            </p>
        </div>
    </div>


{% endblock %}